<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/black</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <!--        <item name="android:fitsSystemWindows">true</item>-->
<!--        <item name="android:windowTranslucentStatus">true</item>-->
        <item name="android:windowContentTransitions" tools:targetApi="lollipop">true</item>
    </style>

    <style name="RatingBarStyle" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/gray6</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="welcomeStyle" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/gray</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="editTextStyle">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:paddingStart">@dimen/_10sdp</item>
        <item name="android:paddingEnd">@dimen/_10sdp</item>
        <item name="android:paddingTop">@dimen/_15sdp</item>
        <item name="android:paddingBottom">@dimen/_15sdp</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="checkBoxStyle" parent="Base.Theme.AppCompat">
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
        <item name="colorControlNormal">@color/gray6</item>
    </style>

    <style name="primaryBtnStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/round_corner_primary_fill</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:paddingTop">@dimen/_10sdp</item>
        <item name="android:paddingBottom">@dimen/_10sdp</item>
    </style>

</resources>
