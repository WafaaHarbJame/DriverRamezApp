<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">

    <include
        android:id="@+id/tool_bar"
        layout="@layout/tool_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/_20sdp"
        android:padding="@dimen/_16sdp">


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:layout_height="wrap_content">
            <com.ramez.ramez.SpichalViews.STextViewBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_50sdp"
                android:layout_marginTop="@dimen/_30sdp"
                android:layout_marginEnd="@dimen/_50sdp"
                android:layout_marginBottom="@dimen/_30sdp"
                android:gravity="center"
                android:padding="@dimen/_12sdp"
                android:text="@string/enter_phone"
                android:textColor="@color/colorPrimary"
                />
        </LinearLayout>

        <com.ramez.ramez.SpichalViews.SEditText
            android:id="@+id/edtPhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="@string/text_profile_phone_number"
            android:inputType="phone"
            android:drawablePadding="@dimen/_8sdp"
            android:paddingStart="@dimen/_8sdp"
            android:paddingEnd="@dimen/_8sdp"
            android:paddingTop="@dimen/_8sdp"
            android:paddingBottom="@dimen/_8sdp"
            android:textAlignment="viewStart"
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/colorLoginText"
            android:textColorHint="@color/colorTextHint" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#d8d8d8" />


        <com.ramez.ramez.SpichalViews.STextViewBold
            android:id="@+id/confirmBut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_50sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_marginEnd="@dimen/_50sdp"
            android:layout_marginBottom="@dimen/_30sdp"
            android:background="@drawable/round_corner_next"
            android:gravity="center"
            android:padding="@dimen/_12sdp"
            android:text="@string/confirm"
            android:textColor="@android:color/white"
            />
    </LinearLayout>


</LinearLayout>
