<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/card_view_outer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/imageView1"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_80sdp"
            android:layout_margin="4dp"
            android:background="@drawable/round_corner_white_fill_big"
            android:elevation="4dp"
            android:padding="@dimen/_8sdp"
            android:scaleType="fitXY"
            app:riv_corner_radius="@dimen/_16sdp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_8sdp"
                android:gravity="center_vertical"
                android:layout_gravity="center"
                android:layout_height="wrap_content">
               <com.ramez.driver.SpichalViews.STextView
                    android:id="@+id/item_text"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:maxLines="2"
                    android:text="item"
                    android:textAlignment="viewStart"
                    android:textSize="12sp"
                    android:textStyle="bold" />


               <com.ramez.driver.SpichalViews.STextView
                    android:id="@+id/price_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:text="1222"
                    android:textColor="@color/black"
                    android:textSize="12sp" />


            </LinearLayout>

           <com.ramez.driver.SpichalViews.STextView
                android:id="@+id/qty_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight=".2"
                android:lines="1"
                android:text="10"
                android:textSize="12sp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:layout_height="wrap_content">
                <Space
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">

                </Space>

                <com.ramez.driver.SpichalViews.SButton
                    android:id="@+id/reOrderProductBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_30sdp"
                    android:text="@string/reorder_product"
                    android:paddingStart="@dimen/_4sdp"
                    android:paddingEnd="@dimen/_4sdp"
                    android:layout_gravity="center"
                    android:textAllCaps="false"
                    android:backgroundTint="@color/green"
                    android:background="@drawable/round_corner_primary_small"
                    android:textColor="@color/white"
                    />

            </LinearLayout>


        </LinearLayout>



    </LinearLayout>

</RelativeLayout>