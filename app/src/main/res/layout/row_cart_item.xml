<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        android:clipToPadding="true"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/_4sdp"
        app:cardElevation="@dimen/_8sdp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.daimajia.swipe.SwipeLayout
                android:id="@+id/swipe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="true"
                app:cardBackgroundColor="@color/white"
                app:leftEdgeSwipeOffset="0dp"
                app:rightEdgeSwipeOffset="0dp">

                <LinearLayout
                    android:id="@+id/bottom_wrapper"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:tag="Bottom1">

                    <ImageView
                        android:id="@+id/deleteBut"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:layout_gravity="top"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_marginTop="@dimen/_30sdp"
                        android:layout_marginEnd="@dimen/_8sdp"
                        android:gravity="center"
                        app:srcCompat="@drawable/delete_icon" />

                    <ImageView
                        android:id="@+id/editBut"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:layout_gravity="top"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_marginTop="@dimen/_30sdp"
                        android:layout_marginEnd="@dimen/_8sdp"
                        android:gravity="center"
                        app:srcCompat="@drawable/edit_icons" />

                    <ImageView
                        android:id="@+id/menuBut"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:layout_gravity="top"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_marginTop="@dimen/_30sdp"
                        android:layout_marginEnd="@dimen/_8sdp"
                        android:gravity="center"
                        app:srcCompat="@drawable/menu_icon" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/card_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <com.makeramen.roundedimageview.RoundedImageView
                            android:id="@+id/imageView1"
                            android:layout_width="@dimen/_70sdp"
                            android:layout_height="@dimen/_60sdp"
                            android:layout_margin="4dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/holder_image"
                            app:riv_corner_radius="@dimen/_16sdp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_4sdp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:layout_marginBottom="4dp"
                                android:layout_gravity="center_vertical"
                                android:orientation="horizontal">

                                <com.ramez.shopp.SpichalViews.STextViewBold
                                    android:id="@+id/tvName"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:maxLines="2"
                                    android:layout_weight="1"
                                    android:textAlignment="viewStart"
                                    android:text="اسم المنتج"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_10ssp" />
                                <ImageView
                                    android:id="@+id/favBut"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="top|start"
                                    android:layout_marginEnd="@dimen/_4sdp"
                                    android:layout_marginTop="@dimen/_8sdp"
                                    android:src="@drawable/empty_fav_grey" />
                            </LinearLayout>

                            <com.ramez.shopp.SpichalViews.STextView
                                android:id="@+id/weight_unitTv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/_4sdp"
                                android:maxLines="2"
                                android:text="@string/pieces"
                                android:textAlignment="viewStart"
                                android:textSize="@dimen/_10ssp" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/_4sdp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">


                                <com.ramez.shopp.SpichalViews.STextView
                                    android:id="@+id/deleteItemBut"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:drawableStart="@drawable/delete_cart_icon"
                                    android:drawablePadding="@dimen/_8sdp"
                                    android:text="@string/delete"
                                    android:textSize="@dimen/_10ssp" />

                                <com.ramez.shopp.SpichalViews.STextView
                                    android:id="@+id/markTv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_8sdp"
                                    android:drawableStart="@drawable/info_icon"
                                    android:drawablePadding="@dimen/_8sdp"
                                    android:text="@string/info"
                                    android:textSize="@dimen/_10ssp" />

                                <com.ramez.shopp.SpichalViews.STextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:textSize="@dimen/_10ssp" />


                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:paddingBottom="@dimen/_8sdp">

                                <com.ramez.shopp.SpichalViews.STextViewBold
                                    android:id="@+id/priceTv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_4sdp"
                                    android:gravity="end|center"
                                    android:lines="1"
                                    android:text="35555"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="@dimen/_11ssp" />

                                <com.ramez.shopp.SpichalViews.STextView
                                    android:id="@+id/currencyPriceTv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_2sdp"
                                    android:gravity="end|center"
                                    android:lines="1"
                                    android:text="BHD"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_11ssp" />

                                <com.ramez.shopp.SpichalViews.STextView
                                    android:id="@+id/productPriceBeforeTv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_4sdp"
                                    android:gravity="end|center"
                                    android:lines="1"
                                    android:text="35555"
                                    android:textColor="@color/gray3"
                                    android:textSize="@dimen/_11ssp" />

                                <Space
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_8sdp"
                                    android:layout_marginEnd="@dimen/_8sdp"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">


                                    <ImageView
                                        android:id="@+id/plusCartBtn"
                                        android:layout_width="@dimen/_30sdp"
                                        android:layout_height="@dimen/_30sdp"
                                        android:background="@drawable/round_corner_grey_fill"
                                        android:minWidth="@dimen/_30sdp"
                                        android:minHeight="@dimen/_30sdp"
                                        android:padding="@dimen/_10sdp"
                                        android:visibility="visible"
                                        app:srcCompat="@drawable/plus_cart" />

                                    <com.ramez.shopp.SpichalViews.STextView
                                        android:id="@+id/productCartQTY"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_horizontal"
                                        android:background="@drawable/round_corner_strock_white_fill"
                                        android:gravity="center"
                                        android:minWidth="@dimen/_30sdp"
                                        android:minHeight="@dimen/_30sdp"
                                        android:text="1"
                                        android:textAllCaps="false"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/_10ssp"
                                        android:visibility="visible" />


                                    <ImageView
                                        android:id="@+id/minusCartBtn"
                                        android:layout_width="@dimen/_30sdp"
                                        android:layout_height="@dimen/_30sdp"
                                        android:layout_marginEnd="@dimen/_8ssp"
                                        android:background="@drawable/round_corner_grey_fill"
                                        android:minWidth="@dimen/_30sdp"
                                        android:minHeight="@dimen/_30sdp"
                                        android:padding="@dimen/_10sdp"
                                        android:visibility="visible"
                                        app:srcCompat="@drawable/minues_cart" />

                                    <ImageView
                                        android:id="@+id/deleteCartBtn"
                                        android:layout_width="@dimen/_30sdp"
                                        android:layout_height="@dimen/_30sdp"
                                        android:layout_marginStart="@dimen/_8ssp"
                                        android:minWidth="@dimen/_30sdp"
                                        android:minHeight="@dimen/_30sdp"
                                        android:padding="@dimen/_8sdp"
                                        android:visibility="gone"
                                        app:srcCompat="@drawable/delete_icon" />
                                </LinearLayout>

                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
            </com.daimajia.swipe.SwipeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>

