<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image_type"
                android:layout_width="40dp"
                android:layout_height="70dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/box"
                android:text="Remove" />

            <LinearLayout
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/image_type"
                android:gravity="start|center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/view"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tvInvID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:lines="1"
                        android:layout_weight="2"
                        android:text="name shop" />
                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </Space>

                    <com.ramez.driver.SpichalViews.STextView
                        android:layout_width="wrap_content"
                        android:id="@+id/countTv"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="0"
                        android:padding="@dimen/_2sdp"
                        android:background="@drawable/counter_style"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:minWidth="25dp"
                        android:visibility="gone"
                        android:minHeight="25dp"
                        android:textAllCaps="false"
                        android:textSize="12sp" />

                </LinearLayout>



                <com.ramez.driver.SpichalViews.STextView
                    android:id="@+id/name_shop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/view"
                    android:gravity="start"
                    android:lines="1"
                    android:text="name shop" />


            </LinearLayout>


            <LinearLayout
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line1"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/image_type"
                android:gravity="start|center">


                <com.ramez.driver.SpichalViews.STextView
                    android:id="@+id/payment_method"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/view"
                    android:layout_weight=".1"
                    android:gravity="start"
                    android:maxLines="2"
                    android:text="payment_method" />



            </LinearLayout>

            <LinearLayout
                android:id="@+id/line3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line2"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/image_type"
                android:gravity="start|center">


                <com.ramez.driver.SpichalViews.STextView
                    android:id="@+id/data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/view"
                    android:gravity="start"
                    android:lines="1"
                    android:text="20/4/55" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/line4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line3"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_toEndOf="@+id/image_type"
                android:visibility="gone"
                android:gravity="start|center">


                <com.ramez.driver.SpichalViews.STextView
                    android:id="@+id/address"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".1"
                    android:gravity="start"
                    android:maxLines="2"
                    android:text="address" />

                <ImageView
                    android:id="@+id/loction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_3sdp"
                    android:paddingTop="@dimen/_3sdp"
                    app:srcCompat="@drawable/ic_location" />

            </LinearLayout>


            <com.ramez.driver.SpichalViews.SButton
                android:id="@+id/detiels"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line4"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:background="@color/colorPrimary"
                android:text="@string/Details"
                android:textColor="#fff" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>