<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">

    <include
        android:id="@+id/tool_bar"
        layout="@layout/tool_bar_with_back" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingEnd="@dimen/_16sdp"
            android:paddingStart="@dimen/_16sdp"
         >


            <com.ramez.shopp.SpichalViews.STextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:layout_marginBottom="@dimen/_20sdp"
                android:text="@string/add_rate"
                android:textColor="@color/colorLoginText" />

            <RatingBar
                android:id="@+id/ratingBr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/_20sdp"
                android:numStars="5"
                android:stepSize="1"
                android:theme="@style/RatingBarStyle">

            </RatingBar>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:clipToPadding="true"
                android:elevation="@dimen/_2sdp"
                app:cardCornerRadius="@dimen/_8sdp"
                android:background="@color/white"
                app:cardUseCompatPadding="true"
                android:layout_height="wrap_content">
                <com.ramez.shopp.SpichalViews.SEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:inputType="textMultiLine"
                    android:minHeight="@dimen/_100sdp"
                    android:background="@color/transparent"
                    />
            </androidx.cardview.widget.CardView>

            <com.ramez.shopp.SpichalViews.STextViewBold
                android:id="@+id/rateBut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_50sdp"
                android:layout_marginTop="@dimen/_16sdp"
                android:layout_marginEnd="@dimen/_50sdp"
                android:background="@drawable/round_corner_primary_small"
                android:gravity="center"
                android:paddingStart="@dimen/_30sdp"
                android:paddingBottom="@dimen/_4sdp"
                android:paddingTop="@dimen/_4sdp"
                android:paddingEnd="@dimen/_30sdp"
                android:text="@string/accept"
                android:textColor="@android:color/white"
                />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>
